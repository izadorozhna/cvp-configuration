{% set flavor_name = flavor_name or "m1.small" %}
{% set image_name = image_name or "testvm" %}
{% set image_name_ubuntu = image_name_ubuntu or "Ubuntu1604" %}
{% set volume_type = volume_type or "" %}
{% set availability_zone = "nova" %}
{% set ext_name_name = "ext-net" %}
{% set concurrency = 3 %}
{% set times = 18 %}
{% set users = 2 %}
{% set tenants = 5 %}
{
    "CinderVolumes.create_and_attach_volume": [
        {
            "args": {
                "size": 10,
                "image": {
                    "name": "{{image_name}}"
                },
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "create_volume_params": {
                },
                "auto_assign_nic": true,
                "availability_zone": "{{availability_zone}}"
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                },
                "network": {},
                "quotas": {
                    "cinder": {
                        "volumes": -1,
                        "gigabytes": -1,
                        "snapshots": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ],
    "NovaServers.boot_server_from_volume_and_delete": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name}}"
                },
                "volume_size": 10,
                "volume_type": "{{volume_type}}",
                "force_delete": false,
                "auto_assign_nic": true,
                "availability_zone": "{{availability_zone}}"
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                },
                "network": {},
                "quotas": {
                    "cinder": {
                        "volumes": -1,
                        "gigabytes": -1,
                        "snapshots": -1
                    }
                }

            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ],
    "CinderVolumes.create_and_delete_volume": [
        {
            "args": {
                "size": {
                    "min": 1,
                    "max": 5
                }
            },
            "runner": {
                "type": "constant",
                "times": {{times}},
                "concurrency": {{concurrency}}
            },
            "context": {
                "users": {
                    "tenants": {{tenants}},
                    "users_per_tenant": {{users}}
                },
                "quotas": {
                    "cinder": {
                        "volumes": -1,
                        "gigabytes": -1,
                        "snapshots": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
