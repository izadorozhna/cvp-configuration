{% set flavor_name = flavor_name or "m1.small" %}
{% set image_name = image_name or "testvm" %}
{% set image_name_ubuntu = image_name_ubuntu or "Ubuntu1604" %}
{% set volume_type = volume_type or "" %}
{% set availability_zone = "nova" %}
{% set concurrency = 3 %}
{% set times = 18 %}
{% set users = 2 %}
{% set tenants = 5 %}
{% set ext_net_id = "${EXT_NET_ID}" %}
{% set priv_net_id = priv_net_id or "${FIXED_NET_ID}" %}
{% set volume_size = 10 %}
{
    "CinderVolumes.create_and_attach_volume": [
        {
            "args": {
                "size": {{volume_size}},
                "image": {
                    "name": "{{image_name_ubuntu}}"
                },
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "create_volume_params": {
                },
                "auto_assign_nic": true,
                "availability_zone": "{{availability_zone}}",
                "nics": [
                    { "net-id": "{{priv_net_id}}" }
                ],
                "router_create_args": {
                    "external_gateway_info": {
                            "network_id": "{{ext_net_id}}"
                    }
                }
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                },
                "api_versions@openstack": {
                    "cinder": {
                        "service_type": "volumev3"
                    }
                },
                "quotas": {
                    "nova": {
                        "instances": -1,
                        "cores": -1,
                        "ram": -1,
                        "key_pairs": -1,
                        "security_groups": -1,
                        "security_group_rules": -1
                    },
                    "cinder": {
                        "volumes": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ],
    "NovaServers.boot_server_from_volume_and_delete": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name_ubuntu}}"
                },
                "volume_size": {{volume_size}},
                "volume_type": "{{volume_type}}",
                "force_delete": false,
                "auto_assign_nic": true,
                "availability_zone": "{{availability_zone}}",
                "nics": [
                    { "net-id": "{{priv_net_id}}" }
                ],
                "router_create_args": {
                    "external_gateway_info": {
                            "network_id": "{{ext_net_id}}"
                    }
                }
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                },
                "api_versions@openstack": {
                    "cinder": {
                        "service_type": "volumev3"
                    }
                },
                "quotas": {
                    "cinder": {
                        "volumes": -1,
                        "gigabytes": -1,
                        "snapshots": -1
                    },
                    "nova": {
                        "instances": -1,
                        "cores": -1,
                        "ram": -1,
                        "key_pairs": -1,
                        "security_groups": -1,
                        "security_group_rules": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ],
    "CinderVolumes.create_and_delete_volume": [
        {
            "args": {
                "size": {{volume_size}}
            },
            "runner": {
                "type": "constant",
                "times": {{times}},
                "concurrency": {{concurrency}}
            },
            "context": {
                "users": {
                    "tenants": {{tenants}},
                    "users_per_tenant": {{users}}
                },
                "api_versions@openstack": {
                    "cinder": {
                        "service_type": "volumev3"
                    }
                },
                "quotas": {
                    "cinder": {
                        "volumes": -1,
                        "gigabytes": -1,
                        "snapshots": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
