{% set flavor_name = flavor_name or "m1.small" %}
{% set image_name = image_name or "testvm" %}
{% set image_name_ubuntu = image_name_ubuntu or "Ubuntu1604_Rally" %}
{% set volume_type = volume_type or "" %}
{% set availability_zone = "nova" %}
{% set concurrency = 3 %}
{% set times = 18 %}
{% set users = 2 %}
{% set tenants = 5 %}
{% set ext_net_id = "${EXT_NET_ID}" %}
{% set priv_net_id = priv_net_id or "${FIXED_NET_ID}" %}
{
    "NeutronNetworks.create_and_delete_subnets": [
        {
            "args": {
                "network_create_args": {},
                "subnet_create_args": {},
                "subnet_cidr_start": "1.1.0.0/30",
                "subnets_per_network": 2
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                },
                "quotas": {
                    "neutron": {
                        "network": -1,
                        "subnet": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ],
    "NeutronNetworks.create_and_delete_networks": [
        {
            "args": {
                "network_create_args": {}
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                },
                "quotas": {
                    "neutron": {
                        "network": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ],
    "NeutronNetworks.create_and_delete_ports": [
        {
            "args": {
                "network_create_args": {},
                "port_create_args": {},
                "ports_per_network": 10
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                },
                "quotas": {
                    "neutron": {
                        "network": -1,
                        "port": -1
                    }
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ],
    "NeutronNetworks.create_and_delete_routers": [
        {
            "args": {
                "network_create_args": {},
                "subnet_create_args": {},
                "subnet_cidr_start": "1.1.0.0/30",
                "subnets_per_network": 3,
                "router_create_args": {}
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "network": {},
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                },
                "quotas": {
                    "neutron": {
                        "network": -1,
                        "subnet": -1,
                        "router": -1
                    }
                }
            },
            "sla": {
                 "failure_rate": {
                     "max": 0
                 }
            }
        }
    ],
    "NovaServers.boot_and_delete_server": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image_name_ubuntu}}"
                },
                "force_delete": false,
                "auto_assign_nic": true,
                "availability_zone": "{{availability_zone}}",
                "nics": [
                    { "net-id": "{{priv_net_id}}" }
                ],
                "router_create_args": {
                    "external_gateway_info": {
                            "network_id": "{{ext_net_id}}"
                    }
                }
            },
            "runner": {
                "type": "constant",
                "concurrency": {{concurrency}},
                "times": {{times}}
            },
            "context": {
                "users": {
                    "tenants": {{users}},
                    "users_per_tenant": {{tenants}}
                }
            },
            "sla": {
                "failure_rate": {
                    "max": 0
                }
            }
        }
    ]
}
